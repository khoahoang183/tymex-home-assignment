<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--android:background="@drawable/shape_bg_loading"-->

    <LinearLayout
        android:layout_width="@dimen/long_200dp"
        android:layout_height="@dimen/long_200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/long_50dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/long_60dp"
            android:layout_height="@dimen/long_60dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/raw_loading" />

        <TextView
            android:id="@+id/contentTv"
            style="@style/BaseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/long_8dp"
            android:gravity="center"
            android:text="@string/common_dialog_loading"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone" />

    </LinearLayout>


</FrameLayout>